{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "diagnostics": true,
    "sourceMap": true,
    "removeComments": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "outDir": "lib",
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
      "./src/types"
    ]
  },
  "diagnostics": true,
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.scss",
    "**/*.svg",
    "**/*.ttf",
    "src/types/*",
    "src/assets/*"
  ],
  "exclude": [
    "build",
    "docs",
    "dist",
    "node_modules",
    "lib"
  ]
}
